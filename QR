  <script>
    // Initialize Supabase client
    const supabase = window.supabase.createClient(
      'https://oakssvcgsgpqydrdpdhn.supabase.co', 
      'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im9ha3NzdmNnc2dwcXlkcmRwZGhuIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDY1NDExMzUsImV4cCI6MjA2MjExNzEzNX0.hM0jVSTXs9TzXfeq2Z-b6IeXIdz68VBTE2aBWrh2RYk'
    );

    // Extract token from URL
    const token = new URLSearchParams(window.location.search).get('token');
    const rewardBtn = document.getElementById('reward-btn');
    const fancyMessage = document.getElementById('fancy-message');

    async function handleToken() {
      if (!token) {
        showMessage("‚ö†Ô∏è Invalid QR. Please scan a valid code!");
        rewardBtn.disabled = true;
        return;
      }

      rewardBtn.disabled = true;
      rewardBtn.textContent = "‚è≥ Checking...";

      try {
        // Step 1: Check if token exists in the database
        const { data: existingToken, error: tokenError } = await supabase
          .from('reward_tokens')  // Table name should be 'reward_tokens'
          .select('*')
          .eq('token', token)
          .single();

        if (tokenError) {
          showMessage("‚ö†Ô∏è Error checking token.");
          return;
        }

        if (!existingToken) {
          showMessage("‚ö†Ô∏è Invalid QR. Please scan a valid code!");
          return;
        }

        // Step 2: Call the Edge Function to process the token
        const response = await fetch('https://your-deno-edge-function-url', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ token: token }),
        });

        const result = await response.json();

        if (result.error) {
          showMessage(result.error);
        } else {
          showMessage(`üéâ You won: ${result.reward}`);
          rewardBtn.disabled = true;
        }
      } catch (error) {
        showMessage("‚ö†Ô∏è Something went wrong. Please try again!");
        console.error(error);
      }
    }

    function showMessage(message) {
      fancyMessage.textContent = message;
      fancyMessage.style.display = 'block';
    }

    rewardBtn.addEventListener('click', handleToken);
  </script>

</body>
